                <Button x:Name="MoveRightButton"
                        Width="24.667"
                        Margin="0,14.337,0,14.77"
                        HorizontalAlignment="Right"
                        Click="MoveRightButton_Click"
                        Content=""
                        IsEnabled="True"
                        Template="{DynamicResource RightButtonCtrlTemplate}" />
            </Grid>
        </Viewbox>
    </Grid>
